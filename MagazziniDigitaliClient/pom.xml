<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>it.bncf.magazziniDigitali.client</groupId>
  <artifactId>MagazziniDigitaliClient</artifactId>
  <version>3.0.0</version>
  <description>Interfaccia Client relativa all'istituto o ente il quale pubblicher√† il materiale nell'area temporanea a lui riservata per la pubblicazione </description>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
  </properties>
  <dependencies>
    <dependency>
      <groupId>it.bncf.magazziniDigitali.services.client</groupId>
      <artifactId>MagazziniDigitaliServicesClient</artifactId>
      <version>3.0.1</version>
    </dependency>
    <dependency>
      <groupId>mx.randalf.digest</groupId>
      <artifactId>RandalfDigest</artifactId>
      <version>2.0.0</version>
    </dependency>
  </dependencies>
  <repositories>
    <repository>
      <id>randalf.mx-release</id>
      <url>http://maven.bncf.firenze.sbn.it/artifactory/libs-release</url>
    </repository>
  </repositories>
  <build>
    <!-- finalName>MagazziniDigitaliClient</finalName -->
    <plugins>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <archive>
            <manifest>
              <mainClass>it.bncf.magazziniDigitali.client.MDClient</mainClass>
            </manifest>
          </archive>
          <descriptorRefs>
            <descriptorRef>jar-with-dependencies</descriptorRef>
          </descriptorRefs>
          <finalName>MagazziniDigitaliClient</finalName>
          <appendAssemblyId>false</appendAssemblyId>
        </configuration>
        <executions>
          <execution>
            <id>make-assembly</id> 
            <phase>package</phase> 
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
    <resources>
      <resource>
        <directory>${basedir}/src/main/java</directory>
        <includes>
          <include>**/*.cfg.xml</include>
        </includes>
      </resource>
    </resources>
  </build>
  <profiles>
    <profile>
      <id>distribution</id>
      <properties>
        <myAction>distribution</myAction>
      </properties>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <id>copy</id>
                <phase>package</phase>
                <configuration>
                  <target>
                    <echo>ANT TASK - copying files....</echo>
                    <copy todir="${basedir}/distribution" overwrite="true" flatten="true">
                      <fileset dir="${basedir}/target" includes="MagazziniDigitaliClient.jar" />
                    </copy>
                    <copy todir="${basedir}/distribution" overwrite="true" flatten="true">
                      <fileset dir="${basedir}/MD3Batch" includes="esegui.sh-example" />
                    </copy>
                    <copy todir="${basedir}/distribution/MD3Batch" overwrite="true" flatten="true">
                      <fileset dir="${basedir}/MD3Batch" includes="*-example" >
                        <exclude name="esegui.sh-example"/>
                      </fileset>
                    </copy>
                  </target>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
            </executions>
            <dependencies>
              <dependency>
                <groupId>com.jcraft</groupId>
                <artifactId>jsch</artifactId>
                <version>0.1.53</version>
              </dependency>
              <dependency>
                <groupId>ant</groupId>
                <artifactId>ant-jsch</artifactId>
                <version>1.6.5</version>
              </dependency>
            </dependencies>
          </plugin>
          <plugin>
            <artifactId>maven-surefire-plugin</artifactId>
            <configuration>
              <skip>true</skip>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

</project>
